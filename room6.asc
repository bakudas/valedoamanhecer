function room_AfterFadeIn()
{
 SetBackgroundFrame(0);
 hFechaPorta.Enabled = false;
 hIrQuital.Enabled = false;
}

function hExit_WalkOn()
{
  FadeOut(30);
  aDoorOpen.Play();
  Wait(30); 
  cGabe.ChangeRoom(2, 226, 105);
  cSensei.ChangeRoom(2,  291, 121);
}

function hPortaQuintal_Interact()
{
  aDoorOpen.Play();
  SetBackgroundFrame(1);
  hPortaQuintal.Enabled = false;
  hFechaPorta.Enabled = true;
  hIrQuital.Enabled = true;
}

function hFechaPorta_Interact()
{
  aDoorOpen.Play();
  hPortaQuintal.Enabled = true;
  hFechaPorta.Enabled = false;
  hIrQuital.Enabled = false;
  SetBackgroundFrame(0);
}

function hEscadaSobe_WalkOn()
{
  cGabe.ChangeRoom(7, 217, 79);
}

function hIrQuital_WalkOn()
{
  cGabe.ChangeRoom(2, 278, 51);
}
