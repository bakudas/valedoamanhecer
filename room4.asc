// room script file

Overlay *jogarOverlay;
Overlay *sairOverlay;

function room_FirstLoad()
{
}

function room_AfterFadeIn()
{
	aCelestial.Play();
	
	jogarOverlay = Overlay.CreateTextual(145, 130,  50, eFontNormal, 7, "Jogar");
	Wait(10);
	
	sairOverlay = Overlay.CreateTextual(145, 150,  50, eFontNormal, 7, "Sair");
	Wait(10);
	
	mouse.Visible = true;
}



function hJogar_AnyClick()
{
	aTitleJogar.Play();
	Wait(50);
	player.ChangeRoom(1, 24, 142);
}

function hSair_AnyClick()
{
	QuitGame(0);
}
