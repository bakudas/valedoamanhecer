// room script file

function room_AfterFadeIn()
{
	aRed_Carpet_Wooden_Floor.Play();
}

function hEspadaToCamp_WalkOn()
{
  player.ChangeRoom(2, 137, 36);
}

function oEspadaPedra_Interact()
{
	if (!player.HasInventory(iEspada)) 
	{
		player.Walk(157, 111, eBlock);
		player.Say("Nossa, já ouvi várias lendas sobre essa espada. Não consigo imaginar o poder dela.");
		player.Say("Não pode ser! Acho que consigo tirá-la da pedra...");
		player.Say("HMPF!... SWOSH!!");
		player.AddInventory(iEspada);
		oEspadaPedra.Graphic = 32;
		aItem.Play();
		Display("Você pegou a Espada Mágica.\nUse com sabedoria!"); 
	} else {
		player.Walk(134, 109, eBlock);
		player.Say("Eu imagino que essa espada foi deixada aqui por alguém muito podereso..");
		player.Say("Preciso treinar para usá-la.");
	}
	
}

function oEspadaPedra_Look()
{
	player.Say("Não acredito!");
	player.Say("Aquela deve ser a Espada Mágica do Sensei Ki!");
	player.Say("Ela parece ser muito poderosa..");
}

function hJunipero_Look()
{
	player.Walk(173, 78, eBlock);
	Display("Há relatos de um antigo rei que sentava as margens desse lago embaixo do Junípero Vermelho");
	Display("Ele sentava logo ali e meditava durante dias..");
	Display("A Lenda narra também que ele atingiu a iluminação e conseguiu ver o que ninguém mais vê.");
}

function hPlacaLago_Interact()
{
	player.Walk(141, 134, eBlock);
	Display("LAGO DO JUNÍPERO VERMELHO");
}


