function oMinhoca_Look()
{
	if (player.HasInventory(iVaraPescar))
	{
		player.Say("Aquilo parece uma minhoca, acho que poderia usá-la como isca para pegar um peixe.");
	} else {
		player.Say("Hmmm..");
		player.Say("Aquilo parece uma minhoca..");
	}
}

function oMinhoca_Interact()
{
	player.Walk(224, 136, eBlock);
	player.AddInventory(iMinhoca);
	aItem.Play();
	Display("Você pegou uma minhoca e guardou no seu invetário."); // todo: tocar o som de item
	oMinhoca.Visible = false;
}

