function oBau_UseInv()
{
  if (player.ActiveInventory == iChave) {
    player.Walk(179, 49, eBlock);
    aBauOpen.Play();
    oBau.Graphic = 29;
    player.AddInventory(iEscudo); 
    aItem.Play();
